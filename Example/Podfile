source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!

pod 'Eureka', :git => 'https://github.com/xmartlabs/Eureka.git', :branch => 'Swift3'
pod 'BKMoneyKit', '0.0.8'

abstract_target 'BasePods' do
  target 'EurekaCreditCard_Example' do
    pod 'EurekaCreditCard', :path => '../'
  end

  target 'EurekaCreditCard_Tests' do
    pod 'EurekaCreditCard', :path => '../'

    pod 'FBSnapshotTestCase', :git => 'git@github.com:facebook/ios-snapshot-test-case.git', :branch => 'swift-beta-3'
  end
end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['SWIFT_VERSION'] = '3.0'
        end
    end
end
